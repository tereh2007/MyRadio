<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128.0dip"
    android:background="@drawable/status_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/st_bar_logo"
        android:layout_width="@dimen/notification_expanded_height"
        android:layout_height="@dimen/notification_expanded_height"
        android:src="@drawable/st_logo"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/st-bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:divider="?android:listDivider"
        android:layout_toRightOf="@id/st_bar_logo"
        android:layout_toEndOf="@id/st_bar_logo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:showDividers="middle"
        android:dividerPadding="12.0dip">
        <ImageButton
            android:contentDescription="@string/desc"
            android:id="@+id/st_bar_pause"
            android:layout_width="0.0dp"
            android:padding="10.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/button_pause"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            />
        <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/st_bar_play"
        android:padding="10.0dip"
        android:layout_width="0.0dp"
        android:layout_height="@dimen/play_controls_notification"
        android:src="@drawable/button_play"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_weight="1"    />

        <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/st_bar_stop"
        android:padding="10.0dip"
        android:layout_width="0.0dp"
        android:layout_height="@dimen/play_controls_notification"
        android:src="@drawable/button_stop"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:contentDescription="@string/desc"
        android:background="?android:dividerHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_toRightOf="@id/st_bar_logo"
        android:layout_toEndOf="@id/st_bar_logo"
        android:layout_above="@+id/st-bar_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <ImageButton
        android:id="@+id/st_close_btn"
        android:contentDescription="@string/desc"
        android:background="?android:selectableItemBackground"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/st_close_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/text"
        android:paddingLeft="@dimen/notification_padding"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/st_close_btn"
        android:layout_toRightOf="@id/st_bar_logo"
        android:layout_alignParentTop="true">
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_track_name"
            android:focusable="true"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="SONG TITLE"
            />
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_artist_name"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Artist Name"
            />
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_album_name"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Album Name"
            />
    </LinearLayout>
</RelativeLayout>